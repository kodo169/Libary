
@{
    ViewData["Title"] = "sendMail";
}
<div class="main">
    <h1>Management Libary</h1>
    <h3>Forgot Account</h3>
    <form asp-controller="Login" asp-action="changePass">
        <label for="first">
            Username:
        </label>
        <input type="text"
               id="first"
               name="nameAccount"
               placeholder="Enter your Username" required>
        <label class="h1-notify">@TempData["Message"]</label>
        <div class="wrap b">
            <button class="button-login" type="submit">
                Confirm Code
            </button>
        </div>
    </form>
</div>

