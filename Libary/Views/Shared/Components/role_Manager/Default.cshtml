@model IEnumerable<Libary.ViewModels.roleManagement>

<div class="sidebar pe-4 pb-3 col-12" id="navbarCollapse" style="margin-left:50px;">
    <nav class="navbar bg-light navbar-light">
        <div class="navbar-nav w-100">
            <div class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle active" data-bs-toggle="dropdown">Reader Manager</a>
                <div class="dropdown-menu m-0 rounded-0 bg-light" style="border: none;">
                    @foreach (var item in Model)
                    {
                        if (item.checkRole == 2 || item.checkRole == 1)
                        {
                            <a asp-controller="ReaderViolated" asp-action="Index" class="dropdown-item">
                                Reader Violated
                            </a>
                            <a asp-controller="ListWaitingRental" asp-action="Index" class="dropdown-item">
                                Rental Waiting List
                            </a>
                        }

                        if (item.checkRole == 2)
                        {
                            <a asp-controller="ListReaderBorrowing" asp-action="Index" class="dropdown-item">
                                Reader Borrowing
                            </a>
                        }
                    }
                </div>
            </div>
            <a asp-action="Index" asp-controller="managementBook" class="nav-item nav-link active">Add Books</a>
        </div>
    </nav>
</div>