@model IEnumerable<Libary.ViewModels.PeopleRental>
<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Readers Borrowing</h6>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">User ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Loan Date</th>
                        <th scope="col">Due Date</th>
                        <th scope="col">Rental Code</th>
                        <th scope="col">Number Book Rental</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.userID</th>
                            <td>@item.nameUser</td>
                            <td>@item.Loan_Date</td>
                            <td>@item.DueDate</td>
                            <td>@item.Rental_Code</td>
                            <td>@item.numberBookRental<a class="btn btn-sm btn-primary" style="margin-left: 50px;">Detail</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>